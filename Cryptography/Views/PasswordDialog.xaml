<Window x:Class="Cryptography.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password"
        Height="220" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CC0D1117"
        WindowStartupLocation="CenterOwner"
        Opacity="0">

    <Window.Effect>
        <BlurEffect Radius="12"/>
    </Window.Effect>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="16" BorderThickness="1" BorderBrush="#2D88FF" Background="#151C27" Padding="20">
        <StackPanel>
            <TextBlock Text="Enter password to generate key"
                       Foreground="#88FFFFFF"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <PasswordBox x:Name="PasswordBox"
                         Height="38"
                         Background="#0D1722"
                         Foreground="White"
                         BorderThickness="1"
                         BorderBrush="#2D88FF"
                         Padding="10"
                         FontSize="16"
                         FontFamily="Consolas"
                         />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelBtn" Content="Cancel"
                        Width="90" Height="36"
                        Margin="0,0,8,0"
                        Background="#222"
                        Foreground="White"
                        BorderBrush="#2D88FF"
                        Click="CancelBtn_Click"/>

                <Button x:Name="OkBtn" Content="OK"
                        Width="90" Height="36"
                        Background="#2D88FF"
                        Foreground="White"
                        BorderThickness="0"
                        Click="OkBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
