<Window x:Class="Cryptography.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crypto Studio" Height="720" Width="1188"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BgBrush}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkBlue.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="ModernCard" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
                <Setter Property="BorderBrush" Value="#2A4365"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="20"/>
            </Style>

            <Style x:Key="SectionHeader" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,6"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,16" Padding="20,14">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="28" Height="28" Fill="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Crypto Studio" FontSize="22" FontWeight="Bold" 
                               Foreground="{StaticResource AccentBrush}" Margin="10,0,0,0"/>
                </StackPanel>
                <TextBlock Text="Modern Encryption &amp; Decryption Suite" 
                           Foreground="{StaticResource TextMutedBrush}" FontSize="13"
                           VerticalAlignment="Center" DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Algorithms -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12">
                    <StackPanel Background="#071018" Width="200">
                        <Expander Header="Algorithms" Foreground="White" FontWeight="SemiBold" Background="#0F1A25">
                            <StackPanel>
                                <RadioButton Content="AES" GroupName="Algorithms" Foreground="White" Margin="5,2" Checked="Algorithm_Checked"/>
                                <RadioButton Content="DES" GroupName="Algorithms" Foreground="White" Margin="5,2" Checked="Algorithm_Checked"/>
                                <RadioButton Content="3DES" GroupName="Algorithms" Foreground="White" Margin="5,2" Checked="Algorithm_Checked"/>
                            </StackPanel>
                        </Expander>
                        <Separator Background="#2A4365" Margin="0,12,0,8"/>  
                        <Expander Header="Modes" Foreground="White" FontWeight="SemiBold" Background="#0F1A25" Margin="0,10,0,0">
                            <StackPanel>
                                <RadioButton Content="ECB" GroupName="Modes" Foreground="White" Margin="5,2" Checked="Mode_Checked"/>
                                <RadioButton Content="CBC" GroupName="Modes" Foreground="White" Margin="5,2" Checked="Mode_Checked"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>

                </Border>

                <!-- Status Panel - Moved to left side -->
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="SYSTEM STATUS"/>
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="● Ready" Foreground="#4ADE80" FontSize="11" Margin="0,2"/>
                            <TextBlock Text="Algorithm: " x:Name="Alg_Status" Foreground="#88AACC" FontSize="11" Margin="0,2"/>
                            <TextBlock Text="Mode: " x:Name="Mode_Status" Foreground="#88AACC" FontSize="11" Margin="0,2"/>
                            <TextBlock Text="Key: " x:Name="Key_Status" Foreground="#88AACC" FontSize="11" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Center Panel - Main Operations -->
            <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- File Selection -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Style="{StaticResource SectionHeader}" Text="INPUT FILE"/>
                        <Border Background="#0A1424" BorderThickness="1" BorderBrush="#1E3A5C" Padding="1">
                            <DockPanel>
                                <TextBox x:Name="FilePathText" Height="38" VerticalAlignment="Center" 
                                         Background="Transparent" Foreground="White" BorderThickness="0" 
                                         Padding="14,0" FontSize="12" VerticalContentAlignment="Center"
                                         Text="Select input file..."/>
                                <Button x:Name="BrowseBtn" Content="Browse" Width="90" Height="32" 
                                        Style="{StaticResource AccentButton}" Margin="6,0" 
                                        Click="BrowseBtn_Click"/>
                            </DockPanel>
                        </Border>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SectionHeader}" Text="ACTIONS"/>
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="EncryptBtn" Content="🔒 Encrypt" Grid.Column="0" Height="48" 
                                    Style="{StaticResource AccentButton}" FontSize="13" FontWeight="SemiBold"
                                    Click="EncryptBtn_Click"/>
                            <Button x:Name="DecryptBtn" Content="🔓 Decrypt" Grid.Column="2" Height="48" 
                                    Background="#1A2D4A" Foreground="White" BorderBrush="#2D4F7C"
                                    BorderThickness="1" FontSize="13" FontWeight="SemiBold"
                                    Click="DecryptBtn_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Log Section - Improved spacing -->
                    <StackPanel Grid.Row="2" Margin="0,25,0,0">
                        <DockPanel Margin="0,0,0,8">
                            
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="ClearLogBtn" Content="Clear" 
                                        Style="{StaticResource AccentButton}" Width="70" Height="26" FontSize="11"
                                        Click="ClearLogBtn_Click"/>
                                <Button x:Name="CopyLogBtn" Content="Copy" 
                                        Style="{StaticResource AccentButton}" Width="70" Height="26" FontSize="11" Margin="6,0,0,0"
                                        Click="CopyLogBtn_Click"/>
                            </StackPanel>
                        </DockPanel>

                        <Border Background="#0A1620" BorderThickness="1" BorderBrush="#1E3A5C" Height="180">
                            <!-- Log Section - Updated to match code-behind -->
                            <StackPanel Grid.Row="2" Margin="0,25,0,0">
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Style="{StaticResource SectionHeader}" Text="APPLICATION LOG" DockPanel.Dock="Left"/>
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="LogStats" Text="0 entries" Foreground="#88AACC" FontSize="11" 
                      VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        
                                    </StackPanel>
                                </DockPanel>

                                <Border Background="#0A1620" BorderThickness="1" BorderBrush="#1E3A5C" Height="180">
                                    <ScrollViewer x:Name="LogScroll" CanContentScroll="True" VerticalScrollBarVisibility="Auto" ScrollChanged="LogScroll_ScrollChanged">
                                        <ItemsControl x:Name="LogItemsControl">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="12,5" Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#1A2D4A">
                                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"
                                       FontFamily="Consolas, Courier New" FontSize="11"
                                       Foreground="#B8D4FF"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Key Management -->
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="KEY MANAGEMENT"/>

                        <StackPanel Margin="0,8,0,0" Orientation="Vertical">
                            <Button Content="🎲 Generate New Key" Style="{StaticResource AccentButton}" 
                                    Height="42" Margin="0,0,0,8" Click="GenerateKey_Click"/>
                            <Button Content="📥 Import Key File" Style="{StaticResource AccentButton}" 
                                    Height="42" Margin="0,0,0,8" Click="ImportKey_Click"/>
                            <Button Content="💾 Save Key As..." Style="{StaticResource AccentButton}" 
                                    Height="42" Click="SaveKey_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Key Input Panel -->
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="ENCRYPTION KEY"/>
                        <TextBlock Text="Enter or generate your cryptographic key" 
                                   Foreground="#6688AA" FontSize="10" Margin="0,0,0,8"/>

                        <Border Background="#0A1424" BorderThickness="1" BorderBrush="#1E3A5C" 
                                VerticalAlignment="Center" Height="42" Margin="0,0,0,12">
                            <TextBox x:Name="KeyBox" Background="Transparent" Foreground="White" BorderThickness="0" 
                                     Padding="12" FontFamily="Consolas" FontSize="11" VerticalContentAlignment="Center"
                                     Text="Not Set"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Password" Style="{StaticResource AccentButton}" 
                                    Height="32" Width="100" Margin="8,0,0,0" Click="PasswordKey_Click"/>
                            <Button Content="Import" Style="{StaticResource AccentButton}" 
                                    Height="32" Width="100" Margin="8,0,0,0" Click="ImportKey_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>